
<div>
  <%= form_for(:session, url: login_path) do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Log in" %>
  <% end %>

  <ul>
    <li>New user?</li>
    <li><%= link_to "Sign up", new_user_path %></li>
  </ul>
</div>